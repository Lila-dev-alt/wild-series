{% extends 'base.html.twig' %}

{% block title %}Actor index{% endblock %}

{% block body %}
<h1 class="bg-warning text-center mt-3">Actor index</h1>
<div class="container m-auto d-flex justify-content-center">
    <div class="button-s text-right">
        <a class="btn btn-danger" href="{{ path('actor_new') }}">Cr√©ez un nouveau</a>
    </div>
    <table class="table table-hover mt-3 ">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for actor in actors %}
            <tr>
                <td><strong>{{ actor.name }}</strong></td>
                <td>
                    <a class="btn bg-warning" href="{{ path('actor_show', {'slug': actor.slug}) }}">show</a>
                    <a class="btn bg-primary text-white mt-1" href="{{ path('actor_edit', {'slug': actor.slug}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>

{% endblock %}
