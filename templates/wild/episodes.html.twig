{% extends 'base.html.twig' %}
{% block body %}
    <div>
        <h2 class="mt-3 text-center bg-warning">{{ program.title }} : Saison {{ season.number }}</h2>
    </div>

    {% for episode in episodes %}
        <div class="contain d-flex justify-content-center">
        <div class="list-group w-50 mt-3">
        <a href="{{ path('episode_show', { 'id': episode.id }) }}" class="list-group-item list-group-item-action flex-column align-items-center">
            <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1 text-primary">{{ episode.title}}</h5>
                <small class="text-warning">Episode {{ episode.number }}</small>
            </div>
        </a>
        </div>
        </div>
    {% endfor %}

{% endblock %}