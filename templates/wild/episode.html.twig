
{% extends 'base.html.twig' %}
{% block body %}
    <div class="mt-3">
        <h2 class=" text-center bg-warning">{{ program.title }} : Saison {{ season.number }}</h2>
        <p class=" text-center"> {{ program.summary }}</p>
    </div>
    <div class="container d-flex justify-content-center">
    <div class="card mt-5 w-60">
        <h5 class="card-header text-warning"> Episode {{ episode.number }}</h5>
        <div class="card-body">
            <h5 class="card-title">{{episode.title}}</h5>
            <p class="card-text">{{episode.synopsis}}</p>
            <a href="{{ path('show_season', {id: season.id}) }}" class="btn btn-primary">Voir la saison {{ season.number }}</a>
            <a href="{{ path('show_program', { id: program.id }) }}" class="btn btn-danger">Détails de la série</a>
        </div>
    </div>
    </div>
{% endblock %}